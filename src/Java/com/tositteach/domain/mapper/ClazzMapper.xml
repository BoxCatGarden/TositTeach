<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tositteach.domain.mapper.ClazzMapper">
    <resultMap id="claMap" type="clazz">
        <id property="claId" column="cla_id" jdbcType="VARCHAR"/>
        <result property="claName" column="cla_name" jdbcType="VARCHAR"/>
        <result property="room" column="room" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询clazz表中的所有信息-->
    <select id="selectAllClazz" resultMap="clazzMap">
        SELECT * FROM clazz
    </select>

    <!--根据班级id查询相关班级信息-->
    <select id="selectClazzById" resultMap="clazzMap" parameterType="string">
        SELECT * FROM clazz
        WHERE cla_id=#{claId}
    </select>

    <!--根据选中班级的cla_id删除班级信息-->
    <delete id="deleteClazz" parameterType="string">
        DELETE FROM clazz WHERE cla_id=#{claId}
    </delete>

    <!--增加新的班级及其信息-->
    <insert id="insertClazz" parameterType="com.tositteach.domain.entity.Clazz">
        INSERT INTO clazz(cla_id,cla_name,room,user_id)
        VALUES
        (#{claId},#{claName},#{room},#{userId})
    </insert>

</mapper>