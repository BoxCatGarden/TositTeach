<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tositteach.domain.mapper.ClazzMapper">
    <resultMap id="clazzMap" type="com.tositteach.domain.entity.Clazz">
        <id column="cla_id" property="clazId" jdbcType="VARCHAR"/>
        <result column="cla_name" property="clazName" jdbcType="VARCHAR"/>
        <result column="room" property="clazRoom" jdbcType="VARCHAR"/>
        <result column="user_id" property="clazUserId" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询clazz表中的所有信息-->
    <select id="selectAllClazz" resultMap="clazzMap">
        SELECT * FROM clazz
    </select>

    <!--根据选中班级的cla_id删除班级信息-->
    <delete id="deleteClazz" parameterType="string">
        DELETE FROM clazz WHERE cla_id=#{clazId}
    </delete>

    <!--增加新的班级及其信息-->
    <insert id="insertClazz" parameterType="com.tositteach.domain.entity.Clazz">
        INSERT INTO clazz(cla_id,cla_name,room,user_id)
        VALUES
        (#{clazId},#{clazName},#{clazRoom},#{clazUserId})
    </insert>

</mapper>